{% extends 'SonataAdminBundle:CRUD:base_edit.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/main.css') }}"/>
{% endblock %}
{% block actions %}
{% endblock %}
{% block form %}
    {% if community_count == 0 %}
        <div class="alert alert-warning">
            Vous ne pouvez pas créer un événement, car vous n'avez pas de communautés.
        </div>
    {% else %}
        {{ form_start(form) }}
        {{ form_label(form.community) }}
        <div class="input-group">
            {{ form_row(form.community) }}
            <div class="input-group-btn">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Repository\EventRepository" name="AppBundle\Entity\Event" table="event">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" column="title" length="150"/>
    <field name="description" type="text" column="description" length="255" nullable="true"/>
    <field name="campaign_begin" type="date" column="campaign_begin" nullable="false"/>
    <field name="campaign_end" type="date" column="campaign_end" nullable="false"/>

    <many-to-one field="community" target-entity="Community" inversed-by="events">
      <join-column name="community_id" referenced-column-name="id" />
    </many-to-one>

    <many-to-many field="days" target-entity="Day">
      <join-table name="events_days">
        <join-columns>
          <join-column name="event_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="day_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <many-to-many field="participants" target-entity="Participant">
      <join-table name="events_participants">
        <join-columns>
          <join-column name="event_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="participant_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <many-to-many field="choices" target-entity="Choice">
      <join-table name="events_choices">
        <join-columns>
          <join-column name="event_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="choice_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

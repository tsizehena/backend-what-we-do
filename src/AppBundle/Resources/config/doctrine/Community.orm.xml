<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Repository\CommunityRepository" name="AppBundle\Entity\Community" table="community">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" column="title" length="150"/>
    <field name="description" type="text" column="description" length="255" nullable="true"/>
    <field name="noteMin" type="integer" column="noteMin">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="noteMax" type="integer" column="noteMax"/>
    <one-to-many field="notes" target-entity="Note" mapped-by="community" orphan-removal="true">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <many-to-many field="organizers" inversed-by="communities" target-entity="Application\Sonata\UserBundle\Entity\User">
      <join-table name="communities_organizers">
        <join-columns>
          <join-column name="community_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <many-to-many field="participants" inversed-by="communities" target-entity="AppBundle\Entity\Participant">
      <join-table name="communities_participants">
        <join-columns>
          <join-column name="community_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="participant_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <many-to-many field="choices" target-entity="Choice">
      <join-table name="communities_choices">
        <join-columns>
          <join-column name="community_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="choice_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
